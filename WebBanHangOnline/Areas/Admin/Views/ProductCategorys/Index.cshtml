@model IEnumerable<WebBanHangOnline.Models.Entity.ProductCategorys>

@{
    ViewBag.Title = "Danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{

    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/productcategorys" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh mục sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>

            <div class="card-tools">
                <a href="/admin/productcategorys/add" class="btn btn-primary">Thêm mới</a>
            </div>
        </div>
        <div class="card-body">
          
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="text-center">STT</th>
                    <th class="text-center">Tên danh mục</th>
                    <th class="text-center">Ngày tạo</th>
                    <th class="text-center">Chức năng</th>

                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    var i = 1;
                    foreach (var item in Model)
                    {
                        <tr id="trow_@item.Id">
                            <td class="text-center">@i</td>
                            <td>@item.Title</td>
                            <td class="text-center">@item.CreatedDate.ToString("dd/MM/yyyy")</td>

                            <td class="text-center">
                                <a href="/admin/products/edit/@item.Id" class="btn btm-sm btn-primary">Sửa</a>
                                <a href="#" data-id="@item.Id" class="btn btm-sm btn-danger btnDelete">Xóa</a>
                            </td>

                        </tr>
                        i++;
                    }

                }
                else
                {
                    <tr>
                        <td colspan="4">Không có bản ghi nào !</td>
                    </tr>
                }
            </tbody>
        </table>
        
    </div>
    <!-- /.card-body -->
    <div class="card-footer">

    </div>
    <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

@section scripts{

    <script>
        $(Document).ready(function () {
            //xóa all checkbox đã chọn
            $('body').on('click', '#BtnDeleteAll', function (e) {
                e.preventDefault();
                var str = "";
                debugger;
                var checkbox = $(this).parents('.card').find('tr td input:checkbox');
                var i = 0;
                checkbox.each(function () {
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');
                        var _id = $(this).val();
                        if (i === 0) {
                            str += _id;
                        } else {
                            str += "," + _id;
                        }
                        i++;
                    } else {
                        checkbox.attr('selected', '');

                    }
                });
                if (str.length > 0) {
                    var conf = confirm('Bạn có muốn xóa all bản ghi dưới đây hay không?');
                    if (conf === true) {
                        $.ajax({
                            url: '/productcategorys/deleteAll',
                            type: 'POST',
                            data: { ids: str },
                            success: function (rs) {
                                if (rs.success) {
                                    location.reload();
                                }
                            }
                        });
                    }
                }
            });
            //bật tắt all checkbox
            $('body').on('change', '#SelectAll', function () {
                var checkStatus = this.checked;
                var checkbox = $(this).parents('.card-body').find('tr td input:checkbox');
                checkbox.each(function () {
                    this.checked = checkStatus;
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');
                    } else {
                        checkbox.attr('selected', '');
                    }
                });
            });
            //xóa bản ghi
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var conf = confirm('Bạn có muốn xóa bản ghi này hay không');
                if (conf === true) {
                    $.ajax({
                        url: '/admin/productcategorys/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    });
                }
            });
            //bật tắt active hiện bài viết hya không
            $('body').on('click', '.btnActived', function () {
                var btn = $(this);
                var id = btn.data("id");
                $.ajax({
                    url: '/admin/productcategorys/IsActived',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        debugger;
                        if (rs.success) {
                            if (rs.isActived) {
                                btn.html("<i class='fa fa-check text-success'> </i>");
                            } else {
                                btn.html("<i class='fas fa-times text-danger'> </i>");
                            }

                        }
                    }
                });
            });

        });
    </script>
}



